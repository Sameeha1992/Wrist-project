<%-include("../partials/mainheader")%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>500 - Internal Server Error</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .error-container {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            text-align: center;
            max-width: 500px;
            width: 90%;
        }
        .error-container img {
            max-width: 100%;
            height: auto;
            border-radius: 4px;
            margin-bottom: 1rem;
        }
        h1 {
            color: #e74c3c;
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }
        p {
            color: #555555;
            font-size: 1rem;
            margin-bottom: 1.5rem;
        }
        .button {
            background-color: #3498db;
            border: none;
            border-radius: 4px;
            color: #ffffff;
            cursor: pointer;
            display: inline-block;
            font-size: 1rem;
            padding: 0.75rem 1.5rem;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }
        .button:hover, .button:focus {
            background-color: #2980b9;
        }
        .button:focus {
            outline: 3px solid #2980b9;
            outline-offset: 2px;
        }
    </style>
</head>
<body>
    <div class="error-container" role="alert">
        <img src="https://cdn.dribbble.com/users/1555425/screenshots/5101999/media/0ce788f3ecee5c473441c9a8dc3d55f2.jpg" alt="Internal Server Error">
        <h1>500 - Internal Server Error</h1>
        <p>Something went wrong on our end. Please try again later or return to the homepage.</p>
        <a href="/" class="button">Go to Homepage</a>
    </div>
<%-include("../partials/admin/footer")%>
</body>
</html>
