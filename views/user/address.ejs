        contentType: "application/json",
        data: JSON.stringify({ elemId: id }),
        success: function (response) {
            if (response.success) {
                window.location.reload()
                Toastify({
                    text: response.message,
                    duration: 2000,
                    gravity: "bottom",
                    position: "left",
                    backgroundColor: "#03c03c",
                    stopOnFocus: true
                }).showToast();

                address.remove();
              
            } else {
                Toastify({
                    text: response.message,
                    duration: 2000,
                    gravity: "bottom",
                    position: "left",
                    backgroundColor: "#fff",
                    stopOnFocus: true
                }).showToast();
            }
        },
        error: function (xhr) {
            if (xhr.status === 409) {
                const data = xhr.responseJSON;
                console.log("hellooooo delete aayeeee")
                Toastify({
                    text: data.message,
                    duration: 2000,
                    gravity: "bottom",
                    position: "left",
                    backgroundColor: "#fff",
                    stopOnFocus: true
                }).showToast();
            } else {
                console.error("Error occurred:", xhr.responseText);
                Toastify({
                    text: "An error occurred while deleting the address.",
                    duration: 2000,
                    gravity: "bottom",
                    position: "left",
                    backgroundColor: "#ff0000",
                    stopOnFocus: true
                }).showToast();
            }
        }
    });
}




