                                <h5 class="card-title mb-0">Your Addresses</h5>
                            </div>
                            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                                <div id="addressWrapper">
                                    <% if (addresses && addresses.length > 0) { %>
                                        <% addresses.forEach((address, index) => { %>
                                            <div class="card mb-2" id="address<%= index %>">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between">
                                                        <h5 class="card-title"><%= address.address_name %></h5>
                                                        <button class="btn btn-sm btn-danger" onclick="deleteAddress('<%= address._id %>')">Delete</button>
                                                    </div>
                                                    <p class="card-text m-0"><%= address.house_name + ", " + address.street_address %></p>
                                                    <p class="card-text m-0"><%= address.city + ", " + address.state + " , " + address.pincode %></p>
                                                    <p class="card-text m-0">Phone: <%= address.phone %></p>
                                                    <p class="card-text m-0">Alt Phone: <%= address.alt_phone %></p>
                                                </div>
                                            </div>
                                        <% }) %>
                                    <% } else { %>
                                        <p>No addresses found. Please add an address.</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>

                    
             
                    <script>
                        
                        function deleteAddress(id, index) {
    const address = document.getElementById(`address${index}`);

    $.ajax({
        url: "/deleteaddress",
        type: "DELETE",
        contentType: "application/json",
        data: JSON.stringify({ elemId: id }),
        success: function (response) {
            if (response.success) {
                Toastify({
                    text: response.message,
                    duration: 2000,
                    gravity: "bottom",
                    position: "left",
                    backgroundColor: "#03c03c",
                    stopOnFocus: true
                }).showToast();

                address.remove();
            } else {
                Toastify({
                    text: response.message,
                    duration: 2000,
                    gravity: "bottom",
                    position: "left",
                    backgroundColor: "#fff",
                    stopOnFocus: true
                }).showToast();
            }
        },
        error: function (xhr) {
            if (xhr.status === 409) {
                const data = xhr.responseJSON;
                console.log("hellooooo delete aayeeee")
                Toastify({
                    text: data.message,
                    duration: 2000,
                    gravity: "bottom",
                    position: "left",
                    backgroundColor: "#fff",
                    stopOnFocus: true
                }).showToast();
            } else {
                console.error("Error occurred:", xhr.responseText);
                Toastify({
                    text: "An error occurred while deleting the address.",
                    duration: 2000,
                    gravity: "bottom",
                    position: "left",
                    backgroundColor: "#ff0000",
                    stopOnFocus: true
                }).showToast();
            }
        }
    });
}




                    </script>



