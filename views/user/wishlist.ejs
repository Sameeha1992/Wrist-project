<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wishlist - WristStyle</title>
    <%- include("../partials/user/profileHead") %>

    <style>
        .wishlist-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        .wishlist-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        .wishlist-table th, .wishlist-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        .wishlist-table th {
            background-color: #f8f8f8;
        }
        .product-image {
            width: 100px;
            height: auto;
        }
        .out-of-stock {
            color: #ff0000;
        }
        .add-to-cart-btn {
            background-color: #666;
            color: white;
            padding: 8px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .remove-btn {
            color: #666;
            cursor: pointer;
            border: none;
            background: none;
        }
        .empty-state {
            text-align: center;
            background: white;
            border-radius: 12px;
            padding: 40px;
            max-width: 400px;
            margin: 40px auto;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .empty-state-icon {
            width: 120px;
            height: 120px;
            margin-bottom: 20px;
        }
        .empty-state h2 {
            color: #333;
            margin-bottom: 8px;
            font-size: 1.2rem;
        }
        .empty-state p {
            color: #666;
            margin-bottom: 24px;
        }
        .start-shopping-btn {
            background-color: #f87171;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.2s;
        }
        .start-shopping-btn:hover {
            background-color: #ef4444;
        }
    </style>
</head>
<body>
    <div class="wishlist-container">
        <h1>Welcome, <%= user.name%></h1>

        
        <% if (!wishlist || !wishlist.items || wishlist.items.length === 0) { %>

            <div class="empty-state">
                <svg class="empty-state-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="4" y="4" width="16" height="16" rx="2" stroke="#f87171" stroke-width="2"/>
                    <circle cx="18" cy="6" r="2" fill="#f87171"/>
                </svg>
                <h2>Your wishlist is empty!</h2>
                <p>Explore more and shortlist some items</p>
                <a href="/shop">
                    <button class="start-shopping-btn">START SHOPPING</button>
                </a>
            </div>
        <% } else { %>
            <table class="wishlist-table">
                <thead>
                    <tr>
                        <th>REMOVE</th>
                        <th>IMAGES</th>
                        <th>PRODUCT</th>
                        <th>COLOR</th>
                        <th>UNIT PRICE</th>
                        <th>STOCK STATUS</th>
                        <th>ADD TO CART</th>
                    </tr>
                </thead>
                <tbody>
                    <% wishlist.items.forEach(item => { %>

                        <% 
                        
                        const currentColorStock = item.productId.colorStock.find(color => color.color === item.color) || item.productId.colorStock[0];
                        const isOutOfStock = currentColorStock.status === 'Out_of_Stock';
                        %>
                        <script>
                            console.log('<%-wishlist %>');
                            
                        </script>
                        <tr>
                            <td>
                               
                                <button class="remove-btn" data-product-id="<%= item.productId._id %>">Remove</button>
                            </td>
                            <td>
                                <img src="/uploads/re-image/<%= item.productId.productImage && item.productId.productImage.length > 0 ? item.productId.productImage[0] : 'default-product.png' %>" alt="<%= item.productId.productName %>" class="product-image">
                            </td>
                            <td>
                                
                                <div><%= item.productId.productName %></div>
                            </td>
                            <td>
                                <span class="color-span"><%= item.color %></span>                             </td>
                            <td>â‚¹<%= item.productId.salePrice %></td>

                            <td>
                                <span class="<%= isOutOfStock ? 'out-of-stock' : '' %>">
                                    <%= currentColorStock.status %>
                                </span>
                            </td>
                            
                            <td>
                                <button class="add-to-cart-btn" data-product-id="<%= item.productId._id %>" data-color-stock-id="<%= currentColorStock._id%>" data-quantity="1"
                                onclick="addToCartFromWishlist(this)"
                                <%= currentColorStock.status === 'Out_of_Stock' ? 'disabled' : '' %>>
                                    ADD TO CART
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

     <script>



        function removeItem(productId, color) {
            Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to remove this product from your wishlist?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, remove it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Perform AJAX request to remove item
                    $.ajax({
                        url: '/remove-from-wishlist',
                        method: 'POST',
                        data: JSON.stringify({ productId,color }),
                        contentType: 'application/json',
                        success: function(response) {
                            if (response.success) {
                                // Show success toast
                                Toastify({
                                    text: "Item removed from wishlist",
                                    duration: 3000,
                                    close: true,
                                    gravity: "top",
                                    position: "right",
                                    style: { backgroundColor: "#2ecc71" }
                                }).showToast();
    
                                window.location.reload();

                            } else {


                                Toastify({
                                    text: response.message||"Failed to remove item",
                                    duration: 3000,
                                    close: true,
                                    gravity: "top",
                                    position: "right",
                                    style: { backgroundColor: "#e74c3c" }
                                }).showToast();
                            }
                        },
                        error: function(xhr) {
                            // Show error toast for request failure
                            Toastify({
                                text: xhr.responseJSON?.message || "Failed to remove item",
                                duration: 3000,
                                close: true,
                                gravity: "top",
                                position: "right",
                                style: { backgroundColor: "#e74c3c" }
                            }).showToast();
                        }
                    });
                }
            });
        }
   

        document.addEventListener('DOMContentLoaded', () => {
    // Changed from wishlist-container to wishlist-table since that's the element in your HTML
    const wishlistTable = document.querySelector('.wishlist-table');
    
    if (wishlistTable) {
        wishlistTable.addEventListener('click', (event) => {
            if (event.target.classList.contains('remove-btn')) {
                const productId = event.target.getAttribute('data-product-id');
                removeItem(productId);
            }
        });
    }
});
    



function addToCartFromWishlist(button) {

    const productId = button.getAttribute('data-product-id');
    const colorStockId = button.getAttribute("data-color-stock-id");
    const quantity = button.getAttribute("data-quantity");

    if (!colorStockId) {
        Toastify({
            text: "Color variant not found",
            duration: 3000,
            close: true,
            gravity: "top",
            position: "right",
            style: { backgroundColor: "#e74c3c" }
        }).showToast();
        return;
    }

    const wishlistId = document.getElementById("wishlist-id").textContent
    $.ajax({
        url: "/addcart",  // New endpoint for moving from wishlist to cart
        method: "POST",
        contentType: 'application/json',
        data: JSON.stringify({ 
            productId: productId,
            quantity: parseInt(quantity),
            colorStockId: colorStockId,
            origin:"wishlist",
            wishlistId

        }),
        success: function(response) {
            if (response.success) {
                Toastify({
                    text: "Item moved to cart successfully!",
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "right",
                    style: { backgroundColor: "#2ecc71" }
                }).showToast();

                // Update cart count in navbar
                const cartBadge = document.querySelector('.navbar .badge.bg-danger');
                if (cartBadge && response.cartItemCount) {
                    cartBadge.textContent = response.cartItemCount;
                }

                // Remove the item row from wishlist table
                const itemRow = button.closest('tr');
                itemRow.remove();

                // Check if wishlist is empty after removal
                const wishlistTable = document.querySelector('.wishlist-table tbody');
                if (!wishlistTable.children.length) {
                    // Show empty state
                    const wishlistContainer = document.querySelector('.wishlist-container');
                    wishlistContainer.innerHTML = `
                        <div class="empty-state">
                            <svg class="empty-state-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="4" y="4" width="16" height="16" rx="2" stroke="#f87171" stroke-width="2"/>
                                <circle cx="18" cy="6" r="2" fill="#f87171"/>
                            </svg>
                            <h2>Your wishlist is empty!</h2>
                            <p>Explore more and shortlist some items</p>
                            <a href="/shop">
                                <button class="start-shopping-btn">START SHOPPING</button>
                            </a>
                        </div>
                    `;
                }
            } else {
                Toastify({
                    text: response.message || "Failed to move item to cart",
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "right",
                    style: { backgroundColor: "#e74c3c" }
                }).showToast();
            }
        },
        error: function(xhr) {
            Toastify({
                text: xhr.responseJSON?.message || "Failed to move item to cart",
                duration: 3000,
                close: true,
                gravity: "top",
                position: "right",
                style: { backgroundColor: "#e74c3c" }
            }).showToast();
        }
    });
}
    </script> 


    <%include("../partials/user/footer")%>
</body>
</html>